</header>
{{! Card }}
<div class="container" id="profileContainer">
  <div class="card text-center">
      {{! Image uploader }}
        <div>
          <form action="/addImage" method="post">
            <img class="profile-pic" src="http://www.sbcs.edu.tt/wp-content/uploads/2016/04/profile-default.png" />
            <div class="upload-button btn btn-mdb-color btn-rounded float-left">Add photo</div>
            <input type="file" class="file-upload" name="imageURL" accept="image/*">
          </form>
        </div>
        {{! Image uploader }}
      <h3 class="card-header primary-color white-text">
      {{#users}}{{firstname}} {{lastname}}{{/users}}
      </h3>
      <div class="card-body">
        <table class="table table-striped">
            <tbody class="container text-center">
            {{#users}}
            <tr>
                <td>Age:</td>
                <td>{{age}}</td>
            </tr>
             <tr>
                <td>Gender:</td>
                <td>{{gender}}</td>
            </tr>
            <tr>
                <td>Weight:</td>
                <td>{{weight}} lbs.</td>
            </tr>
            <tr>
                <td>Height:</td>
                <td>{{height}} inches</td>
            </tr>
            <tr>
                <td>City:</td>
                <td>{{city}}</td>
            </tr>
            <tr>
                <td>State:</td>
                <td>{{state}}</a></td>
            </tr>
            <tr>
                <td>Activity Level:</td>
                <td>{{activitylevel}} out of 10.</td>
            </tr>
            <tr>
                <td>Goals:</td>
                <td>{{goals}}</td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>{{email}}</td>
            </tr>
            {{/users}}
            </tbody>
        </table>
        <div class="flex-row">
              <a class="card-link" href='/userworkouts/{{id}}'>Add Workout</a>
        </div>
      </div>
  </div>
</div>
